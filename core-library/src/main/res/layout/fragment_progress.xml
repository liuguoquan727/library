<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <FrameLayout
      android:id="@+id/content_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <ViewStub
        android:id="@+id/fragment_progress_stub_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/fragment_progress_stub_progress"
        />

    <ViewStub
        android:id="@+id/fragment_progress_stub_network_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/fragment_progress_stub_error"
        />

    <ViewStub
        android:id="@+id/fragment_progress_stub_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/fragment_progress_stub_empty"
        />

    <ViewStub
        android:id="@+id/fragment_progress_stub_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/fragment_progress_stub_welcome"
        />

  </FrameLayout>

  <ViewStub
      android:id="@+id/fragment_progress_stub_preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout="@layout/fragment_progress_stub_preview"
      />
</FrameLayout>